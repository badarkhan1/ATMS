<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Button is focued but not pressed-->
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/btn_bg"/>

    <!--Button is focued and pressed-->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@drawable/gradient"/>

    <!--Button is not focued but pressed-->
    <item android:state_focused="false" android:state_pressed="true" android:drawable="@drawable/gradient"/>

    <!--/-->
    <item android:drawable="@drawable/btn_bg"/>


</selector>